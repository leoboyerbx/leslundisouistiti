{% extends 'base.html.twig' %}

{% block title %}Les lundis ouistiti !{% endblock %}
{% block body_class %}overflow-hidden{% endblock %}
{% block body %}
    <div class="w-full h-screen flex-grow flex flex-col">
        <div class="flex-grow drawer drawer-mobile w-full">
            <input id="my-drawer-2" type="checkbox" class="drawer-toggle">
            <div class="drawer-content relative">
                <!-- Page content here -->
                <label for="my-drawer-2" class="btn drawer-button lg:hidden absolute top-4 left-4"><i class="fas fa-bars"></i></label>
                <main class="w-full h-full p-8">
                    {% block admin_page %}{% endblock %}
                </main>
            </div>
            <div class="drawer-side bg-base-200">
                <label for="my-drawer-2" class="drawer-overlay">Open drawer</label>
                <ul class="menu p-4 overflow-y-auto w-80 bg-base-200 text-base-content flex flex-col gap-2">
                    <li>{{ include('components/admin-link.twig', {
                            toRoute: 'admin_dashboard',
                            icon: 'fa-cog',
                            title: 'Options'
                        }) }}</li>
                    <li>{{ include('components/admin-link.twig', {
                            toRoute: 'admin_event_index',
                            icon: 'fa-calendar-day',
                            title: 'Événements'
                        }) }}</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
