{% extends 'admin/admin_base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block admin_page %}
    <header class="flex gap-4">
        <a href="{{ path('admin_event_index') }}" class="btn btn-sm"><i class="fas fa-chevron-left mr-2"></i><i
                    class="fas fa-list"></i></a>
        <h1 class="text-2xl font-bold">{{ event.title }}</h1>

        <div class="flex gap-2">

            <a href="{{ path('admin_event_show', {'id': event.id}) }}" class="btn btn-sm btn-accent"><i
                        class="fas fa-eye"></i></a>

            {{ include('admin/event/_delete_form.html.twig') }}

        </div>
    </header>
    {{ include('admin/event/_form.html.twig', {'button_label': 'Update'}) }}


{% endblock %}
