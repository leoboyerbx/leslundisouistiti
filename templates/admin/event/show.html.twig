{% extends 'admin/admin_base.html.twig' %}

{% block title %}Event{% endblock %}

{% block admin_page %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Seats</th>
                <td>{{ event.seats }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_event_index') }}">back to list</a>

    <a href="{{ path('admin_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('admin/event/_delete_form.html.twig') }}
{% endblock %}
